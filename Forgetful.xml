		<Button name="$parentButtonClose" inherits="OptionsButtonTemplate" text="Close">
			<Anchors>
				<Anchor point="BOTTOMRIGHT">
				<Offset><AbsDimension x="-20" y="20"/></Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick> Forgetful_Main:Hide(); </OnClick>
			</Scripts>
		</Button>

	</Frames>
	
	<Layers>
		<Layer>
			<FontString name="$parentFontString" font="Tooltip_Small" text="Gear set to use with spec 1:" justifyH="LEFT" justifyV="TOP">
			 <!-- <Color r="1" g="0.8" b="1" a="1"/>-->
			  <FontHeight val="12"/>
			  <Anchors>
			   <Anchor point="TOPLEFT" relativeTo="$parent" x="10" y="-58" />
			  </Anchors>
			  <Shadow>
				<Offset x="1" y="1" />
				<Color r="0" g="0" b="0"/>
			  </Shadow>
			</FontString>		
		</Layer>
		
		<Layer>
			<FontString name="$parentFontString2" font="Tooltip_Small" text="Gear set to use with spec 2:" justifyH="LEFT" justifyV="TOP">
			  <FontHeight val="12"/>
