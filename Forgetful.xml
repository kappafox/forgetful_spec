<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
 
 
 <Script File="Forgetful.lua"/>
  <Frame name="Forgetful_Frame">
   <Scripts>
    <OnLoad>
		Forgetful_OnLoad(self);
    </OnLoad>
	<OnEvent>
		Forgetful_OnEvent(self, event, ...);
	</OnEvent>
   </Scripts>
  </Frame>
  
  
  <Frame name="Forgetful_Main" movable="true" toplevel="true" frameStrata="DIALOG" hidden="true" enableMouse="true">
	<Anchors><Anchor point="CENTER"/></Anchors>

	<Size>
		<AbsDimension x="300" y="200"/>
	</Size>
	
	<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
		<EdgeSize>
			<AbsValue val="16"/>
		</EdgeSize>
		<TileSize>
			<AbsValue val="32"/>
		</TileSize>
		<BackgroundInsets>
			<AbsInset left="5" right="5" top="5" bottom="5"/>
		</BackgroundInsets>
	</Backdrop>
	
	 <Scripts>
		  <OnLoad>self:RegisterForDrag("LeftButton");</OnLoad>
		  <OnDragStart>self:StartMoving();</OnDragStart>
		  <OnDragStop>self:StopMovingOrSizing();</OnDragStop>
	</Scripts>
