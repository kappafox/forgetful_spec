			  <Shadow>
				<Offset x="1" y="1" />
				<Color r="0" g="0" b="0"/>
			  </Shadow>
			</FontString>		
		</Layer>
		
		<Layer>
			<Texture name="$parent_Spec1_Icon" file="Interface\ItemSocketingFrame\UI-ItemSockets" alphaMode="ADD">
				<Size>
					<AbsDimension x="30" y="30"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-70" y="-20"/>
